<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kepler.lesssmarteditor.editor.MainActivity"
    android:weightSum="1.0"
    >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="(제목 없음)"
        android:layout_weight="0.1"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <Button
            android:id="@+id/btn_add_text"
            android:text="text 추가"
            android:onClick="onClickedAddText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.333"/>
        <Button
            android:id="@+id/btn_add_image"
            android:text="image 추가"
            android:onClick="onClickedAddImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.333"/>
        <Button
            android:id="@+id/btn_add_map"
            android:text="Map 추가"
            android:onClick="onClickedAddMap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.333"/>

    </LinearLayout>

</LinearLayout>
